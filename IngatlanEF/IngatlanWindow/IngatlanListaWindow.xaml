<Window x:Class="IngatlanEF.IngatlanWindow.IngatlanListaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IngatlanEF.IngatlanWindow"
        mc:Ignorable="d"
        Title="IngatlanListaWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" Name="dgrIngatlanok"/>
        <Button Grid.Row="1" Name="btnBezaras" Content="Bezárás" Click="BtnBezar" Margin="5" 
                Padding="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
